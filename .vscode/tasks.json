{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      "DEBUG": "*",
      "DEBUG_COLORS": "true"
    }
  },
  "tasks": [
    {
      "taskName": "Run",
      "type": "shell",
      "command": "ts-node ${file}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}