{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "TypeScript Debug",
      "type": "node",
      "request": "launch",
      "env": { 
        "DEBUG": "*",
        "DEBUG_COLORS": "true"
      },
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--nolazy", "-r", "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "outputCapture": "std"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "env": { 
        "DEBUG": "*",
        "DEBUG_COLORS": "true"
      },
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Test Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest",
      "env": { 
        "DEBUG": "*",
        "DEBUG_COLORS": "true"
      },
      "args": [
        "-i", "--runInBand", "ts-node/register", "${relativeFile}"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "outputCapture": "std"
    }
  ]
}